{% extends "AppBundle::client_layout.html.twig" %}

{% block content %}

    <link rel="stylesheet" type="text/css" href="{{ asset('client/css/cards.css') }}">
    {#   {{ dump(accouplement) }}  #}
    <div class="container">








        <div class="text-center">
            <h3 class="border-success"><span class="heading_border bg-success" >Les annonces d'accouplement</span></h3>
        </div>


        <div class="row">
            {% for a in acc %}
            <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
                <div class="card">
                    <img class="card-img-top" src="{{ asset('images/pawPets/' ~ a.images) }}" height="150px" width="150px">
                    <div class="card-block">

                        <h class="card-title mt-3">Je propose à la reproduction un :<br> {{ a.type }} </h>
                        <h4>Age : {{ a.age }}</h4>
                        <div class="meta">
                            <a>Race : {{ a.race }}</a>
                        </div>
                        <div class="card-text">
                            Sexe : {{ a.sex }}
                        </div>
                    </div>
                    <div class="card-footer">
                        <small>{{ a.date|date("d-m-Y") }}</small>
                        <button data-type="{{ a.type }}" data-poil="{{ a.typePoil }}" data-message="{{ a.messageComplementaire }}" data-date="{{ a.date|date("d-m-Y") }}" data-vaccin="{{ a.vaccin }}" data-dossier="{{ a.dossier }}" data-couleur="{{ a.couleur }}" data-race="{{ a.race }}" data-sexe="{{ a.sex }}" data-age="{{ a.age }}" data-lieu="{{ a.lieuTrouve }}" class="btn btn-secondary float-right btn-sm button-show" data-toggle="modal" id="button" align="center" data-target="#myModal">Afficher détails</button>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>

    </div>
<br><br>
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Détails</h4>
                </div>
                <div class="modal-body">

                        <div class="card">

                            <div class="card-block">

                                <h class="card-title mt-3">Je propose à la reproduction un : <span id="type"></span> <br>  </h>
                                <h4>Age : <b><span id="age"></span></b></h4>
                                <h4>Race : <b><span id="race"></span></b></h4>
                                <h4>Sexe : <b><span id="sexe"></span></b></h4>
                                <h4>Couleur : <b><span id="couleur"></span></b></h4>
                                <h4>Type de poil : <b><span id="poil"></span></b></h4>
                                <h4>Message complémentaire : <b><span id="message"> </span></b></h4>
                                <h4>Date de publication : <b><span id="date"></span></b></h4>
                                <h4>Lieu : <b><span id="lieu"></span></b></h4>
                                <h4>Vaccin Mis à jour : <b><span id="vaccin"></span></b></h4>
                                <h4>Dossier médical : <b><span id="dossier"></span></b></h4>
                                <div class="meta">
                                    <a></a>
                                </div>
                                <div class="card-text">

                                </div>
                            </div>
                            <div class="card-footer">
                                <small></small>
                            </div>
                        </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>

                </div>
            </div>
        </div>
    </div>

    <script src="{{ asset('client/js/jquery.min.js') }}"></script>

    <script>

        $("document").ready(function(){
           $(".button-show").click(function(){
               $("#type").text($(this).data("type"));
               $("#race").text($(this).data("race"));
               $("#sexe").text($(this).data("sexe"));
               $("#age").text($(this).data("age"));
               $("#couleur").text($(this).data("couleur"));
               $("#poil").text($(this).data("poil"));
               $("#message").text($(this).data("message"));
               $("#date").text($(this).data("date"));
               $("#lieu").text($(this).data("lieu"));
               $("#vaccin").text($(this).data("vaccin"));
               $("#dossier").text($(this).data("dossier"));

           })
        });
    </script>
    <div class="navigation" style="text-align: center">
        {{ knp_pagination_render(acc) }}

    </div>
{% endblock content%}