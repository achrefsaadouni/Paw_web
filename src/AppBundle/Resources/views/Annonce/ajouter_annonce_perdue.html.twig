{% extends "AppBundle::client_layout.html.twig" %}

{% block content %}

    <div class="container">
        <div class="row" >
            <!-- Contact form Section Start -->
            <div class="col-md-6">
                <h2>Vous avez PERDU un animal: DÃ©posez une annonce   </h2>
