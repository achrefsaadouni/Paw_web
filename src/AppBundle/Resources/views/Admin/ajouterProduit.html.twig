{% extends "AppBundle::admin_layout.html.twig" %}

{% block content %}
    {{ form_start(form) }}
    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="UTF-8">
        <title>Ajouter Produit</title>
        <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->
        <!-- global css -->
        <link href="{{ asset('admin/css/app.css') }}" rel="stylesheet"  type="text/css">
        <!-- end of global css -->
        <!--page level css -->
        <link href="{{ asset('admin/vendors/jasny-bootstrap/css/jasny-bootstrap.css') }}" rel="stylesheet" />
        <link href="{{ asset('admin/vendors/iCheck/css/all.css') }}" rel="stylesheet" type="text/css" />
        <!--end of page level css-->
    </head>
    <body class="skin-josh">
    <!-- Right side column. Contains the navbar and content of the page -->
    <aside class="right-side">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <!--section starts-->
            <h1>Ajouter Produit</h1>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path("home_admin") }}">
                        <i class="livicon" data-name="home" data-size="14" data-loop="true"></i>
                        Acceuil
                    </a>
                </li>
                <li>
                    <a href="#">Ajouter Produit</a>
                </li>
            </ol>
        </section>
        <!--section ends-->
        <section class="content">
            <!--main content-->
            <div class="row">
                <!--row starts-->
                <div class="col-md-12">
                    <!--lg-6 starts-->
                    <!--basic form starts-->
                    <div class="panel panel-primary" >
                        <div class="panel-heading">
                            <h3 class="panel-title">
                                <i class="livicon" data-name="clock" data-size="16" data-loop="true" data-c="#fff" data-hc="white"></i>
                                Ajouter Produit
                            </h3>
                            <span class="pull-right">
                                    <i class="glyphicon glyphicon-chevron-up clickable"></i>

                                </span>
                        </div>
                        <div class="panel-body">
                            <form class="form-horizontal" action="#" method="post">
                                <fieldset>
                                    <!-- Name input-->
                                    <div class="form-group">
                                        <label class="col-md-3 control-label" for="libelle">Libelle</label>
                                        <div class="col-md-9">
                                            {{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}</div>
                                    </div>
                                    <!-- Email input-->
                                    <div class="form-group">
                                        <label class="col-md-3 control-label" for="type">Type</label>
                                        <div class="col-md-9">
                                            {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}</div>
                                    </div>
                                    <!-- Message body -->
                                    <div class="form-group">
                                        <label class="col-md-3 control-label" for="message">Description</label>
                                        <div class="col-md-9">

                                                {{ form_widget(form.description, {'attr': {'class': 'form-control resize_vertical'}}) }}

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label" for="prix">Prix</label>
                                        <div class="col-md-9">
                                            {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}</div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label" for="quantite">Quantite</label>
                                        <div class="col-md-9">
                                            {{ form_widget(form.quantite, {'attr': {'class': 'form-control' , 'min':'0'}}) }}</div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label" for="name">Image 1</label>
                                        <div class="col-md-9">
                                                {{ form_widget(form.image1, {'attr': {'class': 'fileinput fileinput-new input-group','data-provides': 'fileinput'}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label" for="name">Image 2</label>
                                        <div class="col-md-9">

                                            {{ form_widget(form.image2, {'attr': {'class': 'fileinput fileinput-new input-group','data-provides': 'fileinput'}}) }}
                                        </div>
                                    </div>
                                    <!-- Form actions -->
                                    <div class="form-group">
                                        <div class="col-md-12 text-right">
                                            <button type="submit" class="btn btn-responsive btn-primary btn-sm">Ajouter</button>
                                        </div>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>

                    <a id="back-to-top" href="#" class="btn btn-primary btn-lg back-to-top" role="button" title="Return to top" data-toggle="tooltip" data-placement="left">
                        <i class="livicon" data-name="plane-up" data-size="18" data-loop="true" data-c="#fff" data-hc="white"></i>
                    </a>
                    <!-- global js -->
                    <script src="{{ asset('admin/js/app.js') }}" type="text/javascript"></script>
                    <!-- end of global js -->
                    <!-- begining of page level js -->
                    <script src="{{ asset('admin/vendors/favicon/favicon.js') }}"></script>
                    <script src="{{ asset('admin/vendors/jasny-bootstrap/js/jasny-bootstrap.js') }}"></script>
                    <script src="{{ asset('admin/vendors/iCheck/js/icheck.js') }}"></script>
                    <script src="{{ asset('admin/js/pages/form_examples.js') }}"></script>
                    <script>
                        $("#appbundle_produit_prix").on('keyup', function(e) {
                            var val = $(this).val();
                            if (isNaN(val)||(parseFloat(val)<0)) {
                                $(this).val(val.replace(/[^0-9.]/g, ''));
                            }
                        });
                    </script>

                    <!-- end of page level js -->
    </body>
    </html>
    {{ form_end(form) }}
{% endblock content%}