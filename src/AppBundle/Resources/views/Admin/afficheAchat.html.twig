    <script>
        $(document).ready(function() {
            console.log('document is ready');
            $('*').on('click', function() {
                aa=this.id;
            });
            $("#delete_item").on('click', function() {
                keyword = $("#aaaa").val();
                $.get("{{ path('supprimerAchat')}}?keyword=" + keyword, function(data, err, vars) {
                })
            });


        })
    </script>
    <!-- end of page level js -->
    <script>

        function supprimer(id) {
            $("#aaaa").val(id);
        }
    </script>
{% endblock content%}



