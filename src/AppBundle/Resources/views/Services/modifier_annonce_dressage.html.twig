{% extends "AppBundle::client_layout.html.twig" %}

{% block content %}

    <div class="container" >
        <div class="row" >
            <!-- Contact form Section Start -->
            <div class="col-md-5 " align="center" >
                <div class="text-center">
                    <h3 class="border-success"><span class="heading_border bg-success">Modifier votre annonce</span></h3>
                </div>
                <form enctype="multipart/form-data" method="post" class="grid" >
                    <div class="form-group row">
                        <div class="form-group" >
                            <label>Le type de l'animal :</label>
                            <select name="type">
                                <option {% if (m.type=='chien') %} selected {% endif %} value="chien">chien</option>
                                <option {% if (m.type=='chat') %} selected {% endif %} value="chat">chat</option>
                                <option {% if (m.type=='cheval') %} selected {% endif %} value="cheval">cheval</option>
                            </select>
                            <!--<input type="text" class="form-control input-lg" name="type" placeholder="type">-->
                        </div>
                        <div  class="form-group" >
                            <input type="number" class="form-control input-lg" value="{{ m.age }}" name="age" placeholder="age" min="0" max="60" >
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control input-lg" value="{{ m.couleur }}" name="couleur" placeholder="couleur">
                        </div>

                        <div class="form-group">
                            <input type="text" class="form-control input-lg" value="{{ m.race }}" name="race" placeholder="race">
                        </div>
                        <div class="form-group">
                            <label>Le sexe de l'animal :</label> <select name="sexe">
                                <option {% if (m.sex=='male') %} selected {% endif %} value="male">male</option>
                                <option {% if (m.sex=='female') %} selected {% endif %}  value="female">female</option>
                            </select>
                            <!--  <input type="text" class="form-control input-lg" name="sexe" placeholder="sexe"> -->
                        </div>
                        <div class="form-group col-lg-5 col-md-5 col-sm-5 col-xs-5">
                            <label> Date de dressage : </label>
                            <input type="date" class="form-control input-lg" value="{{ (m.dateTr).format("Y-m-d") }}" name="date" placeholder="date dressage">
                        </div>
                        <div class="form-group">
                            <div class="form-group">
                                <label>Choisissez le type de dressage :</label>
                                <select name="typeTr">
                                    <option {% if (m.typeTr=='debutant') %} selected {% endif %}  value="debutant">Dressage de debutant</option>
                                    <option {% if (m.typeTr=='avancé') %} selected {% endif %}  value="avancé">Dressage Avancé</option>
                                    <option {% if (m.typeTr=='chiot') %} selected {% endif %}value="chiot">Dressage des chiot </option>
                                </select>
                            </div>
                            <!--<input type="text" class="form-control input-lg" name="type" placeholder="type">-->
                            <textarea class="form-control input-lg no-resize" name="message" rows="6" placeholder="message compelementaire">{{ m.messageComplementaire }}</textarea>
                        </div>
                        <div class="form-group">
                            <input name="image" accept="image/*" type="file">
                        </div>
                        <div class="input-group">
                            <button class="btn btn-primary" type="submit">  Confirmer  </button>
                        </div>
                     </div>
                </form>
            </div>

        </div>
    </div>

{% endblock content%}