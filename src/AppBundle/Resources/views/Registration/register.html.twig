{% trans_default_domain 'FOSUserBundle' %}
{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'form-group'}}) }}
<!DOCTYPE html>
<html>

<head>
    <title>S'inscrire</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- global level css -->
    <link href="{{ asset('admin/css/bootstrap.min.css') }}" rel="stylesheet" />
    <!-- end of global level css -->
    <!-- page level css -->
    <link href="{{ asset('admin/css/pages/login2.css') }}" rel="stylesheet" />
    <link href="{{ asset('admin/vendors/iCheck/css/minimal/blue.css') }}" rel="stylesheet" />
    <!-- styles of the page ends-->

</head>

<body>
<div class="container">
    <div class="row vertical-offset-100">
        <div class=" col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3  col-md-5 col-md-offset-4 col-lg-4 col-lg-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">S'inscrire</h3>
                </div>
                <div class="panel-body">
                    <form accept-charset="UTF-8" role="form">
                        <fieldset>
                            <div class="form-group input-group">
                                <div class="input-group-addon">
                                    <i class="livicon" data-name="user" data-size="18" data-c="#000" data-hc="#000" data-loop="true"></i>
                                </div>
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control' , 'placeholder' :'Nom'}}) }}
                            </div>
                            <div class="form-group input-group">
                                <div class="input-group-addon">
                                    <i class="livicon" data-name="user" data-size="18" data-c="#000" data-hc="#000" data-loop="true"></i>
                                </div>
                                {{ form_widget(form.prenom, {'attr': {'class': 'form-control' , 'placeholder' :'Prenom'}}) }}
                            </div>
                            <div class="form-group input-group">
                                <div class="input-group-addon">
                                    <i class="livicon" data-name="user" data-size="18" data-c="#000" data-hc="#000" data-loop="true"></i>
                                </div>
                                {{ form_widget(form.username, {'attr': {'class': 'form-control' , 'placeholder' :'Nom De Compte'}}) }}
                            </div>
                            <div class="form-group input-group">
                                <div class="input-group-addon">
                                    <i class="livicon" data-name="mail" data-size="18" data-c="#000" data-hc="#000" data-loop="true"></i>
                                </div>
                                {{ form_widget(form.email, {'attr': {'class': 'form-control' , 'placeholder' :'Email'}}) }}
                            </div>
                            <div class="form-group input-group">
                                <div class="input-group-addon">
                                    <i class="livicon" data-name="key" data-size="18" data-c="#000" data-hc="#000" data-loop="true"></i>
                                </div>
                                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control' ,'placeholder' :'mot de passe'}}) }}
                            </div>
                            <div class="form-group input-group">
                                <div class="input-group-addon">
                                    <i class="livicon" data-name="key" data-size="18" data-c="#000" data-hc="#000" data-loop="true"></i>
                                </div>
                                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control' ,'placeholder' :'confimation'}}) }}
                            </div>
                            <div class="form-group input-group">
                                <div class="input-group-addon">
                                    <i class="livicon" data-name="map" data-size="18" data-c="#000" data-hc="#000" data-loop="true"></i>
                                </div>
                                {{ form_widget(form.addresse, {'attr': {'class': 'form-control' ,'placeholder' :'address'}}) }}
                            </div>
                            <div class="form-group input-group">
                                <div class="input-group-addon">
                                    <i class="livicon" data-name="phone" data-size="18" data-c="#000" data-hc="#000" data-loop="true"></i>
                                </div>
                                {{ form_widget(form.numero, {'attr': {'class': 'form-control' ,'placeholder' :'Numero De Telephone'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.sexe, {'attr': {'class': '' }}) }}
                            </div>
                            <div>

                                <a href="{{ path('fos_user_security_login') }}" class="text-center">J'ai un compte, je souhaite me connecter</a>
                            </div>
                            <div><p>     </p></div>
                            {{ form_widget(form) }}
                            <div>
                                <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-lg btn-primary btn-block" />
                            </div>

                            {{ form_end(form) }}

                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- global js -->
<script src="{{ asset('admin/js/app.js') }}" type="text/javascript"></script>
<!-- end of global js -->
<!-- begining of page level js-->
<script src="{{ asset('admin/js/TweenLite.min.js') }}"></script>
<script src="{{ asset('admin/vendors/iCheck/js/icheck.js') }}" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function() {
        $(document).mousemove(function(event) {
            TweenLite.to($('body'), .5, {
                css: {
                    'background-position': parseInt(event.pageX / 8) + "px " + parseInt(event.pageY / 12) + "px, " + parseInt(event.pageX / 15) + "px " + parseInt(event.pageY / 15) + "px, " + parseInt(event.pageX / 30) + "px " + parseInt(event.pageY / 30) + "px"
                }
            });
        });

        //Flat red color scheme for iCheck
        $('input[type="checkbox"].minimal-blue').iCheck({
            checkboxClass: 'icheckbox_minimal-blue'
        });
    });
</script>
<!-- end of page level js-->
</body>

</html>

{{ form_end(form) }}

